{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen",
          "theme"
        ]
      }
    ]
  },
  "ignoreFiles": [
    "build/**",
    "dist/**",
    "node_modules/**"
  ]
}
